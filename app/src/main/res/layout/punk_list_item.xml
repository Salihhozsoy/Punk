<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPunkImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPunkName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="asdadas"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/ivPunkImage"
        app:layout_constraintTop_toTopOf="@id/ivPunkImage" />

    <TextView
        android:id="@+id/etPunkDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="asdada"
        app:layout_constraintLeft_toLeftOf="@id/tvPunkName"
        app:layout_constraintRight_toLeftOf="@id/ivDelete"
        app:layout_constraintTop_toBottomOf="@id/tvPunkName" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPunkImage" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivPunkImage" />

</androidx.constraintlayout.widget.ConstraintLayout>